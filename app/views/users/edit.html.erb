<div class="row">
  <div class="small-12 columns">
    <%= form_for @user do |f| %>
      <div>
        <%= f.label :bio %>
      </div>
      <div>
        <%= f.text_area :bio %>
      </div>
      <div>
        <%= f.submit %>
      </div>
    <% end %>

    <%= link_to 'Back to Profile', user_path(@user) %>
    <%= yield %>
  </div>
</div>
